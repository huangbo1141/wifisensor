<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="9">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_height"
        android:background="@color/background"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_ip" />

        <ImageView
            android:layout_width="@dimen/icon_width1"
            android:layout_height="@dimen/icon_width1"
            android:src="@drawable/img_logout"
            android:id="@+id/activity_main_logout"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:id="@+id/activity_main_connect"
            android:layout_width="@dimen/icon_width1"
            android:layout_height="@dimen/icon_width1"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginRight="50dp"
            android:layout_toLeftOf="@+id/activity_main_logout"
            android:gravity="center"
            android:src="@drawable/bt_disabled"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layoutMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:background="@drawable/ic_background"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/menu1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/border_white"
                android:gravity="center"
                android:text="Start a New Survey"
                android:padding="5dp"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/menu2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/border_white"
                android:gravity="center"
                android:text="Continue a Survey"
                android:padding="5dp"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/menu3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/border_white"
                android:gravity="center"
                android:text="Review a Survey"
                android:padding="5dp"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/menu4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/border_white"
                android:gravity="center"
                android:text="Logout and Shutdown"
                android:padding="5dp"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="20dp"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>